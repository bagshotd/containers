{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (g++) Debug",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p \"${workspaceFolder}/build\" && /usr/bin/g++ -std=c++17 -O0 -g -Wall -Wextra -pedantic \"${workspaceFolder}/src/main.cpp\" -I \"${workspaceFolder}/src/headers\" -o \"${workspaceFolder}/build/main.out\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "detail": "Build main.cpp with g++ for debugging"
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -f \"${workspaceFolder}/build/main.out\""
            ],
            "problemMatcher": []
        }
    ]
}